    .redirect-button {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 25px;
        color: var(--mud-palette-tertiary-text) !important;
        font-weight: bold;
        text-decoration: none;
        background: transparent;
        border: none;
        border-radius: 40px;
        padding: 5px 20px;
        box-shadow: 0px 5px 5px 0px rgba(var(--mud-palette-text-primary));
        transition: all 0.3s ease-in-out;
        min-width: 120px;
        text-align: center;
    }


    .redirect-button::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 40px;
        padding: 2px;
        background: var(--navmenu-text-gradient);
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
