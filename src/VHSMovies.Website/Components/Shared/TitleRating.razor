<MudStack Row="true" Spacing="0">
    @for (int i = 0; i < Math.Floor(RatingValue); i++)
    {
        <MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Warning" Size="Size" />
    }

    @if (RatingValue % 1 > 0)
    {
        <MudIcon Icon="@Icons.Material.Filled.StarHalf" Color="Color.Warning" Size="Size" />
    }

    @for (int i = (int)Math.Ceiling(RatingValue); i < 5; i++)
    {
        <MudIcon Icon="@Icons.Material.Filled.Star" Size="Size" Style="color: #808080" />
    }
</MudStack>

@code {
    private decimal _rawRatingValue;

    [Parameter]
    public decimal RatingValue
    {
        get => Math.Min(_rawRatingValue / 2, 5);
        set => _rawRatingValue = value;
    }

    [Parameter]
    public Size Size { get; set; }
}
